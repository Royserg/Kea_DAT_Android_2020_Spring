<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/noteListFragment">
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.example.mynotebook.ui.NoteListFragment"
        android:label="My Notebook"
        tools:layout="@layout/fragment_note_list" >
        <action
            android:id="@+id/navigate_to_add_edit_note"
            app:destination="@id/addEditNoteFragment" >
            <argument
                android:name="id"
                app:argType="integer"
                android:defaultValue="99"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.mynotebook.ui.AddEditNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_edit_note" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>